<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/image_view"
        android:src="@drawable/jiaju"
        />


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_below="@+id/image_view"
    tools:context=".MainActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看安防信息"
        android:id="@+id/button_look"
        android:onClick="do0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看照片"
        android:id="@+id/button_dial"
        android:layout_below="@+id/button_look"
        android:onClick="do1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关防"
        android:id="@+id/button_sendEmail"
        android:layout_below="@+id/button_dial"
        android:onClick="do2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开防"
        android:id="@+id/button_pick"
        android:layout_below="@+id/button_sendEmail"
        android:onClick="do3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/xin"
        android:layout_below="@id/button_pick"
        android:text="短信接收端"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xin"
        android:src="@mipmap/ic_launcher"/>

</RelativeLayout>
</RelativeLayout>
